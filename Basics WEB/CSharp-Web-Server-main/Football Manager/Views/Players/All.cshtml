<h1 class="text-center mt-2">All Players</h1>
<div class="row mt-2 mb-4">
     @foreach (var input in Model)
     {
    <div class="player col-6 col-lg-3 game-player">
        <img src="@input.ImageUrl"
             class="player-img-top img-fluid player-image">
        <div class="player-body">
            <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="@input.FullName">
            </h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">@input.Position</li>
                <li class="list-group-item">
                    <span class="speed-stat">@input.Speed</span><span class="endurance-stat">@input.Endurance</span>
                </li>
            </ul>
            <a href="/Players/AddToCollection?playerId=@input.Id" class="btn btn-block btn-primary">Add to Collection</a>
        </div>
    </div>
    }
</div>